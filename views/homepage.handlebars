<div class="parallax"></div>
  
<div class="background">
  <div class="container">

    <header class="row justify-content-center">
      <a href="/{{previousDate}}" id="backward" class="dayButton col-2" style="width: 4rem;">
      <i class="bi bi-arrow-left-circle-fill" style="font-size: 2.5rem;"></i>  
      </a>
      <p id="currentDay" class="col-7 p-3 m-1">{{activeDate}}</p>
      <a href="/{{nextDate}}" id="forward" class="dayButton col-2" style="width: 4rem;">
        <i class="bi bi-arrow-right-circle-fill" style="font-size: 2.5rem;"></i>
      </a>
    </header>

    <div class="parallax"></div>
    
    {{#each homeData}}
      <form id="{{this.startHour}}" class="input-group mb-3">
        <span id="startHour-{{this.startHour}}" class="input-group-text" style="background-color: #DAE4CA;">{{#if (lessThan this.startHour 10)}}0{{/if}}{{this.startHour}}00</span>
        <textarea id="todo-{{this.startHour}}" placeholder="Things to do" type="text" class="form-control">{{this.body}} </textarea>
        <button id="button-{{this.startHour}}" class="input-group-text" style="background-color: #DAE4CA;" type="submit">Save</button>
      </form>
    {{/each}}

    <div class="parallax"></div>
  </div>
</div>

<script src="https://unpkg.com/dayjs@1.8.21/dayjs.min.js"></script>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
<script src="/js/calendar.js"></script>